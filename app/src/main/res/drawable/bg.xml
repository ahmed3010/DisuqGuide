<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="20dp" />
    <gradient
        android:angle="45"
        android:centerColor="@color/md_cyan_300"
        android:centerX="35%"
        android:endColor="@color/md_cyan_600"
        android:startColor="@color/md_cyan_600"
        android:type="linear" />
    <padding
        android:bottom="@dimen/small_margin"
        android:left="@dimen/small_margin"
        android:right="@dimen/small_margin"
        android:top="@dimen/small_margin" />
    <stroke
        android:width="1dp"
        android:color="@color/md_light_blue_500" />

</shape>